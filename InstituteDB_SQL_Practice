DROP DATABASE IF EXISTS InstituteDB1;
CREATE DATABASE IF NOT EXISTS InstituteDB1;
USE InstituteDB1;

CREATE TABLE Students (
    StudentID INT PRIMARY KEY,
    StudentName VARCHAR(50),
    Age INT,
    City VARCHAR(30),
    JoinDate DATE
);
CREATE TABLE Courses (
    CourseID INT PRIMARY KEY,
    CourseName VARCHAR(50),
    Fees DECIMAL(8,2)
);
